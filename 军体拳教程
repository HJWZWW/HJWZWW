        continue
    print("")
    print("开始测试")
    index = random.randint(1,17)
    print(armyhand[index])
    print("")
    echo = input("请输入名称的步骤序号")
    intecho = int(echo)
    if intecho == index + 1:
        print ("恭喜你成功掌握了军体拳，教官笑了~~~")
        print("")
        input("按任意键退出")
        sys.exit(0)
    else:
        print("回答的不正确哦，没有好好学习，教官盯上你了~~~再来学习一次吧!")
        print("")
        answercritical = False
